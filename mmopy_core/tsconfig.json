{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": ".",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "../node_modules/*"
            ]
        },
        "lib": [
            "es2015"
        ]
    },
    "include": [
        "**/*"
    ],
}
